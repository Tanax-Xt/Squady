{
  "name": "squady",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "format": "pnpm format:package && pnpm format:prettier:write",
    "format:package": "sort-package-json",
    "format:prettier:check": "prettier !pnpm-lock.yaml --check --ignore-path .gitignore .",
    "format:prettier:write": "prettier !pnpm-lock.yaml --check --write --ignore-path .gitignore .",
    "generate:api-types": "openapi-typescript http://localhost/api/docs/openapi.json -o ./src/shared/api/types.ts --root-types --root-types-no-schema-prefix",
    "lint": "pnpm lint:tsc && pnpm lint:steiger && pnpm lint:next",
    "lint:next": "next lint . --max-warnings=0",
    "lint:steiger": "steiger ./src",
    "lint:tsc": "tsc --noEmit",
    "prepare": "pnpm prepare:git:hooks",
    "prepare:git:hooks": "git config core.hooksPath ./apps/frontend/.githooks",
    "start": "next start"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@maskito/core": "^3.10.2",
    "@maskito/kit": "^3.10.2",
    "@maskito/react": "^3.10.2",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@t3-oss/env-core": "^0.13.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "input-otp": "^1.4.2",
    "jose": "^6.0.12",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.3",
    "next": "^15.4.3",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.14.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-merge-refs": "^3.0.2",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vaul": "^1.1.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@feature-sliced/steiger-plugin": "^0.5.6",
    "@next/eslint-plugin-next": "^15.4.3",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lint-staged": "^16.1.2",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "sort-package-json": "^3.3.1",
    "steiger": "^0.5.7",
    "typescript-eslint": "^8.35.1"
  }
}
